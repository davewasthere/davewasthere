---
export interface Props {
	title: string;
	body: string;
	href: string;
	date: string;
}

import PostDate from './PostDate.astro';

const { href, title, body, date } = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2>
			<PostDate dateString={date}></PostDate> -{" "}
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</div>
<style>
	.link-card {
		display: flex;
		background-color: #eee;
		border-radius: 5px;
		margin-bottom: 1rem;
		border: solid 1px #ddd;
		padding: 0.75rem;
	}

	.link-card > a {
		text-decoration: none;
		color: #111;
	}	

	.link-card h2 {
		margin: 0;
		padding: 0;
		font-size: 1rem;
		font-weight: 600;
	}

	.link-card:hover {
		border-color: #666;
	}
	
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}

</style>
